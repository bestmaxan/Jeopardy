
@{
    ViewBag.Title = "Results";
    int Num = 0;
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<style type="text/css">
    table {
        font-size: 20px;
    }

    thead {
        font-weight: bold;
    }
    .winner {
        background-color: lightgreen !important;
    }
    .rnd {
        border-bottom: 10px solid black;
    }
</style>
<h2>Round @ViewBag.Round</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <td>#</td>
            @if (ViewBag.Results.Count > 0 && ViewBag.Results[0].Game != 0)
            {
                <td>Game</td>
            }
            <td>ID</td>
            <td>Name</td>
            <td>Points</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var player in ViewBag.Results)
            {
            @(new HtmlString(string.Format("<tr class='{0}{1}'>", player.Winner?"winner":"", (Num+1)%3==0 && player.Game != 0 ? " rnd":"")))
            @(new HtmlString(string.Format("<td>{0}</td>", ++Num)))
            if (player.Game != 0)
            {
                @(new HtmlString(string.Format("<td>{0}</td>", player.Game)))

            }
            @(new HtmlString(string.Format("<td>{0}</td>", player.PlayerID)))
            @(new HtmlString(string.Format("<td>{0}</td>", player.Name)))
            @(new HtmlString(string.Format("<td>{0}</td>", player.Points)))
            @(new HtmlString("</tr>"))
        }

    </tbody>
</table>